

<h1>Accueil</h1>


<h3><%=link_to "Venez découvrir la team !", team_path%></h3>

<h3><%= link_to "contacte nous", contact_path%></h3>

<%= link_to "Toi aussi tu veux potiner?", new_potin_path, class:"btn btn-primary" %><br><br>

<% @potins.each do |potin| %>


<div class="card d-inline-flex text-white bg-primary mb-5" style="max-width: 15rem;">
	<%= link_to "Hey, c'est quoi ce potin?", potin_path(potin.id), class:"btn btn-primary" %>
	<a href="<%= edit_potin_path(potin.id)%>" class="btn btn-primary">Je veux éditer ce potin</a>
	<div class="card-header"><%= potin.user.first_name %><br/></div>
	<div class="card-body"><p class="card-text"><%= potin.title%></p></div>
	<div class="card-body"><p class="card-text"><%= potin.content[1...-1] %></p></div>
	
</div>
<% end %>



